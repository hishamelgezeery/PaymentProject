<h1>Admin Page</h1>

<div class="container">
        <div class="col-md-12">
            <div class="well well-lg">
            <h3>Search parameters</h3>

<%= search_form_for @search, url: search_payments_path, method: :post do |f| %>
  <%= f.condition_fields do |c| %>
    <%= render "condition_fields", f: c %>
  <% end %>
    <div class="field">
    </div>
    <div id="child-left">
    <h4><p><%= link_to_add_fields "Add Conditions", f, :condition%></p></h4>  
    </div>
    
    <div>
      <h4>Sort:</h4> 
    </div>
     
    <%= f.sort_fields do |s| %>
    <div class="row">
    <div class="col-md-4">
      <%= s.sort_select({}, :class => 'form-control') %>
      <br />
     <div class="actions"><%= f.submit "Search", :class => 'btn btn-primary' %></div>
    </div>
    
    <% end %>
    </div>
    
<% end %>
</div>
</div>
</div>
<br />
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="well well-sm">
<table id="payments" class="table table-striped table-bordered">
  <tr>
    <th>Client Name</th>
    <th>Defendent Name</th>
    <th>Citation Number</th>
    <th>Email</th>
    <th>Address</th>
    <th>Phone Number</th>
    <th>Amount</th>
    <th>Convenience Fee</th>
    <th>Total Amount</th>
  </tr>
<% @payments.each do |payment| %>
  <tr>
    <td><%= payment.client.name %></td>
    <td><%= payment.defendent_name %></td>
    <td><%= payment.citation_number %></td>
    <td><%= payment.email %></td>
    <td><%= payment.address %></td>
    <td><%= payment.phone_number %></td>
    <td><%= number_to_currency(payment.amount) %></td>
    <td><%= number_to_currency(payment.convenience_fee) %></td>
    <td><%= number_to_currency(payment.total_amount) %></td>
  </tr>
<% end %>
</table>
</div>
</div>
</div>
</div>